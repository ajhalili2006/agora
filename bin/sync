#!/bin/bash -e
# (this should be run from the root of the repo: util/sync)
# Before pulling, you need to run add once (same command line but with add).
set -e
git pull
cd $HOME/agora/garden
for i in *; do
    cd $i
    echo "*** pulling $i"
    if [[ -d .git ]]; then
        git pull || echo "error pulling"
        echo "*** finished pulling $i"
        echo
    else 
        echo "*** nothing to pull in $i, no git repository found"
        echo
    fi
    cd ..
done
